{
  "editor.fontFamily": "'SauceCodePro Nerd Font', Menlo, Monaco, 'Courier New', monospace, 'Apple Color Emoji'",
  "editor.minimap.showSlider": "always",
  "editor.cursorBlinking": "solid",
  "workbench.colorTheme": "Monokai",
  "workbench.tree.indent": 16,
  "workbench.editor.showIcons": false,
  "editor.overviewRulerBorder": false,
  "editor.renderLineHighlight": "gutter",
  "editor.renderLineHighlightOnlyWhenFocus": true,
  "editor.roundedSelection": false,
  "editor.stablePeek": true,
  "files.trimTrailingWhitespace": true,
  "editor.wrappingIndent": "deepIndent",
  "python.experiments.enabled": false,
  "python.testing.pytestEnabled": true,
  "python.testing.pytestArgs": [
    "--color=yes"
  ],
  "python.globalModuleInstallation": true,
  "html.format.indentInnerHtml": true,
  "html.format.templating": true,
  "files.associations": {
    // Forces recognition of Pelican's themes templates as Jinja2 files.
    "**/templates/**/*.html": "jinja-html"
  },
  "html.format.indentHandlebars": true,
  "jupyter.themeMatplotlibPlots": true,
  "jupyter.askForKernelRestart": false,
  "jupyter.runStartupCommands": [
    "!pip install ipython-autotime",
    "%reload_ext autotime",
    "%precision 10"
  ],
  "workbench.enableExperiments": false,
  "workbench.startupEditor": "none",
  "python.languageServer": "Pylance",
  "notebook.lineNumbers": "on",
  "testing.defaultGutterClickAction": "contextMenu",
  "editor.bracketPairColorization.enabled": true,
  "telemetry.telemetryLevel": "off",
  "editor.guides.bracketPairs": true,
  "explorer.confirmDelete": false,
  "git-graph.commitDetailsView.location": "Docked to Bottom",
  "git-graph.date.format": "ISO Date & Time",
  "git.autofetch": true,
  "autoDocstring.docstringFormat": "sphinx-notypes",
  "git.mergeEditor": true,
  "terminal.integrated.shellIntegration.enabled": true,
  "editor.semanticHighlighting.enabled": true,
  "python.analysis.completeFunctionParens": true,
  "editor.stickyScroll.enabled": true,
  "github.copilot.enable": {
    "*": true,
    "yaml": true,
    "plaintext": true,
    "markdown": true
  },
  "editor.inlineSuggest.enabled": true,
  "djlint.formatCss": true,
  "djlint.formatJs": true,
  "[html][django-html][handlebars][hbs][mustache][jinja][jinja-html][nj][njk][nunjucks][twig]": {
    "editor.defaultFormatter": "monosans.djlint"
  },
  "[python]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      "source.organizeImports": "explicit"
    },
    "editor.defaultFormatter": "charliermarsh.ruff"
  },
  "autoDocstring.startOnNewLine": true,
  "notebook.output.scrolling": true,
  "notebook.formatOnSave.enabled": true,
  "notebook.codeActionsOnSave": {
    "notebook.source.fixAll": "explicit",
    "notebook.source.organizeImports": "explicit"
  },
  "editor.formatOnType": true,
  "editor.formatOnSave": true,
  "jupyter.experiments.enabled": false,
  "python.analysis.autoFormatStrings": true,
  "python.analysis.autoImportCompletions": true,
  "editor.accessibilitySupport": "off",
  "diffEditor.ignoreTrimWhitespace": false,
  "notebook.output.minimalErrorRendering": true,
  "markdown.experimental.updateLinksOnPaste": true,
  "djlint.showInstallError": false,
  "ruff.format.preview": true,
  "ruff.lint.preview": true,
  "ruff.lint.ignore": [
    "D400",
    "ERA001"
  ],
  "python.analysis.aiCodeActions": {
    "generateSymbol": true,
    "generateDocstring": true
  },
  "myst.preview.enable": false,
  "markdown.editor.pasteUrlAsFormattedLink.enabled": "never",
  "markdown.editor.updateLinksOnPaste.enabled": false,
  "accessibility.voice.speechLanguage": "fr-FR",
  "editor.colorDecorators": false,
  "github.copilot.nextEditSuggestions.enabled": true,
  "workbench.secondarySideBar.defaultVisibility": "hidden",
  "chat.tools.terminal.autoApprove": {
    "pytest": true,
    "uv run pytest": true,
    "uv run --frozen pytest ": true,
    "mypy": true,
    "uv run mypy": true,
    "uv run --frozen mypy ": true,
  },
  "claudeCode.preferredLocation": "panel",
  "telemetry.editStats.enabled": false,
  "telemetry.feedback.enabled": false,
  "mermaid-chat.enabled": true
}