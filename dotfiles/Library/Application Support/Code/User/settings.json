{
  "editor.fontFamily": "\"SauceCodePro Nerd Font\", Menlo, Monaco, 'Courier New', monospace",
  "editor.minimap.showSlider": "always",
  "editor.cursorBlinking": "solid",
  "workbench.colorTheme": "Monokai",
  "workbench.tree.indent": 16,
  "workbench.editor.showIcons": false,
  "explorer.decorations.colors": false,
  "editor.overviewRulerBorder": false,
  "editor.renderLineHighlight": "gutter",
  "editor.renderLineHighlightOnlyWhenFocus": true,
  "editor.roundedSelection": false,
  "editor.stablePeek": true,
  "files.trimTrailingWhitespace": true,
  "editor.wrappingIndent": "deepIndent",
  "python.experiments.enabled": false,
  "python.testing.pytestEnabled": true,
  "python.testing.pytestArgs": [
    "--color=yes"
  ],
  "python.globalModuleInstallation": true,
  "html.format.indentInnerHtml": true,
  "html.format.templating": true,
  "files.associations": {
    // Forces recognition of Pelican's themes templates as Jinja2 files.
    "**/templates/**/*.html": "jinja-html"
  },
  "html.format.indentHandlebars": true,
  "jupyter.themeMatplotlibPlots": true,
  "jupyter.askForKernelRestart": false,
  "jupyter.runStartupCommands": [
    "!pip install ipython-autotime",
    "%reload_ext autotime",
    "%precision 10"
  ],
  "workbench.enableExperiments": false,
  "workbench.startupEditor": "none",
  "python.languageServer": "Pylance",
  "notebook.lineNumbers": "on",
  "testing.defaultGutterClickAction": "contextMenu",
  "editor.bracketPairColorization.enabled": true,
  "telemetry.telemetryLevel": "off",
  "editor.guides.bracketPairs": true,
  "explorer.confirmDelete": false,
  "git-graph.commitDetailsView.location": "Docked to Bottom",
  "git-graph.date.format": "ISO Date & Time",
  "git.autofetch": true,
  "autoDocstring.docstringFormat": "sphinx-notypes",
  "git.mergeEditor": true,
  "terminal.integrated.shellIntegration.enabled": true,
  "editor.semanticHighlighting.enabled": true,
  "python.analysis.completeFunctionParens": true,
  "editor.stickyScroll.enabled": true,
  "github.copilot.enable": {
    "*": true,
    "yaml": true,
    "plaintext": true,
    "markdown": true
  },
  "editor.inlineSuggest.enabled": true,
  "djlint.formatCss": true,
  "djlint.formatJs": true,
  "[html][django-html][handlebars][hbs][mustache][jinja][jinja-html][nj][njk][nunjucks][twig]": {
    "editor.defaultFormatter": "monosans.djlint"
  },
  "[python]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      "source.organizeImports": "explicit"
    },
    "editor.defaultFormatter": "charliermarsh.ruff"
  },
  "autoDocstring.startOnNewLine": true,
  "notebook.output.scrolling": true,
  "notebook.formatOnSave.enabled": true,
  "notebook.codeActionsOnSave": {
    "source.fixAll": true,
    "source.organizeImports": true
  },
  "editor.formatOnType": true,
  "editor.formatOnSave": true,
  "ruff.lint.args": [
    "--target-version=py39",
    "--unsafe-fixes",
    "--show-fixes",
    "--ignore=D400",
    "--ignore=ERA001"
  ],
  "jupyter.experiments.enabled": false,
  "python.analysis.autoFormatStrings": true,
  "python.analysis.autoImportCompletions": true,
  "editor.accessibilitySupport": "off",
  "ruff.format.args": [
    "--target-version=py39"
  ],
  "diffEditor.ignoreTrimWhitespace": false,
  "notebook.output.minimalErrorRendering": true,
  "markdown.experimental.updateLinksOnPaste": true,
  "github.copilot.editor.enableAutoCompletions": true,
  "djlint.showInstallError": false,
  "ruff.format.preview": true,
  "ruff.lint.preview": true,
}